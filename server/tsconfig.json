{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2016",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "removeComments": true,

    /* Strict Type Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Modules Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@_types/*": ["src/_types/*"],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middleware/*": ["src/middleware/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"],
      "@src/*": ["src/*"]
    },
    "esModuleInterop": true,

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "include": ["src"]
}
